{
  "versioningScheme": "semver",
  "versionTypes": [
    "alpha",
    "beta",
    "rc"
  ],
  "propertyFile": "gitflow/config.ini",
  "versionPropertyName": "version",
  "build": {
    "stages": {
      "assemble": [
        [
          "python3",
          "setup.py",
          "sdist",
          "--formats=gztar"
        ],
        [
          "python3",
          "setup.py",
          "bdist"
        ]
      ],
      "test": [
        [
          "py.test",
          "--verbose",
          "test"
        ]
      ]
    }
  }
}
